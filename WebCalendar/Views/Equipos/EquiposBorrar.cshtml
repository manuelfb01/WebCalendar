@model WebCalendar.Models.Equipos

@{
    ViewData["Title"] = "Borrar equipo";
}

<h1 class="text-center">Borrar equipo</h1>
<br />
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white" width="100%"><strong>Equipo</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="EquiposBorrar">
                    <div class="form-group">
                        <label asp-for="NombreEquipo" class="control-label"></label>
                        <input asp-for="NombreEquipo" class="form-control" disabled />
                    </div>
                    <div class="form-group mt-3 text-center">
                        <button type="submit" class="btn btn-danger d-inline-block mx-auto"><i class="bi bi-eraser-fill">Borrar</i></button>
                        <a class="btn btn-secondary" asp-controller="Equipos" asp-action="EquiposIndex" asp-route-id="@Model.ID_Competicion">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
