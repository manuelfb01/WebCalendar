<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebCalendar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebCalendar.styles.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Usuarios" asp-action="UsuariosIniciarSesion">WebCalendar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse flex-grow-1 d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        @if (ViewData["nombreUsuario"] != null && ViewData["nombreUsuario"] != "")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Competiciones" asp-action="CompeticionesIndex">Competiciones</a>
                            </li>
                        }
                        @{
                            if (ViewData["nombreUsuario"] != null && ViewData["nombreUsuario"] != "")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-white bi-person fs-4 pt-0 mt-0" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><span class="fs-6 lh-lg align-middle pt-0 mt-0">@ViewData["nombreUsuario"]</span></a>
                                    <ul class="dropdown-menu dropdown-menu-end bg-white" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item mr-5" asp-area="" asp-controller="Usuarios" asp-action="UsuariosEditar" asp-route-id='@ViewData["idUsuario"]'>Mis datos</a></li>
                                        <li><a class="dropdown-item mr-5" asp-area="" asp-controller="Usuarios" asp-action="UsuariosBorrar" asp-route-id='@ViewData["idUsuario"]'>Borrar mi usuario</a></li>
                                        <li><a class="dropdown-item mr-5" asp-area="" asp-controller="Usuarios" asp-action="UsuariosCerrarSesion">Cerrar sesión</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <div class="row">
                <div class="col text-start">
                    &copy; 2023 - WebCalendar - Manuel Falero Bastarreche
                </div>
                <div class="col text-end">
                    Política de privacidad - Aviso legal
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
